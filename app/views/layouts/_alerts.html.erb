<% if notice %>
  <div data-alert class="alert-box">
    <%= notice %>
    <a href="#" class="close">&times;</a>
  </div>
<% end %>
<% if alert %>
  <div data-alert class="alert-box alert">
    <%= alert %>
    <a href="#" class="close">&times;</a>
  </div>
<% end %>
<% if flash[:warning] %>
  <div data-alert class="alert-box warning">
    <%= flash[:warning] %>
    <a href="#" class="close">&times;</a>
  </div>
<% end %>
<% if flash[:success] %>
  <div data-alert class="alert-box success">
    <%= flash[:success] %>
    <a href="#" class="close">&times;</a>
  </div>
<% end %>
